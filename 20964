	<script type="text/javascript">
		let sinin = document.querySelector('.sinin');
		let log = document.querySelector('.log');
		let add = document.querySelector('.add');
		
		let one = document.querySelector('#one');
		let tow = document.querySelector('#tow');
		let big = document.querySelector('.big');
		
		log.style.display='none';
		tow.style.display='none';
		big.style.display='none';
		
		add.onclick=function ADD()
		{
		
			log.style.display='block';
			sinin.style.display='none';
		
		}
		
		one.onclick=function Show()
		{
		
		tow.style.display='block';
		one.style.display='none';
		big.style.display='block';
		
		}
		
		tow.onclick=function hide()
		{
		
		one.style.display='block';
		tow.style.display='none';
		big.style.display='none';
		}
